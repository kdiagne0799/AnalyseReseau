{% extends 'base.html.twig' %}

{% block title %}Dashboard Sécurité{% endblock %}

{% block body %}
<div class="container-fluid py-4 cyber-theme">
    <header class="dashboard-header glass-card mb-4 glass-elevated">
        <div>
            <h1 class="m-0 fw-bold text-white">
                SECURITY <span class="text-info">AUDITOR</span>
            </h1>
            <small class="text-muted">Analyseur de paquets en temps réel</small>
        </div>

        <div class="d-flex flex-column align-items-end gap-2">
            <span class="badge badge-time">
                {{ "now"|date("d/m/Y H:i") }}
            </span>

            <div class="d-flex flex-wrap gap-2 justify-content-end">
                <a href="{{ path('run_python') }}" class="neo-btn neo-btn-primary">
                    <span>Actualiser l’analyse</span>
                </a>
                <a href="{{ path('export_report') }}" class="neo-btn neo-btn-secondary">
                    <span>Exporter le rapport</span>
                </a>
                <a href="{{ path('reset_report') }}" class="neo-btn neo-btn-danger">
                    <span>Reset rapport</span>
                </a>
            </div>
        </div>
    </header>

    <main class="dashboard-grid mb-4">
        <!-- Colonne de gauche : métadonnées / stats -->
        <section class="glass-card p-4 meta-panel glass-elevated">
            <h5 class="text-info border-bottom pb-2 mb-3">MÉTADONNÉES</h5>
            <p class="mb-1 small text-muted">
                Statut : <span class="text-success fw-bold">Actif</span>
            </p>
            <p class="mb-1 small text-muted">
                Données : <span class="text-white">+11,000 paquets</span>
            </p>

            <div class="meta-divider my-3"></div>

            <p class="small fst-italic mb-0">
                Analyse automatisée basée sur le fichier DumpFile.txt.
            </p>
        </section>
    </main>

    {# Rapport en pleine largeur en dessous #}
    <section class="glass-card p-4 glass-elevated report-full">
        <h5 class="text-info border-bottom pb-2 mb-3">Rapport détaillé</h5>
        <article class="markdown-body">
            {{ reportContent|raw }}
        </article>
    </section>
</div>
{% endblock %}

{% block page_styles %}
<style>
    /* ----- Layout global du dashboard ----- */
    body {
        background: radial-gradient(circle at top left, #091428 0, #05080a 45%, #000000 100%);
        color: #e0e0e0;
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .cyber-theme {
        min-height: 100vh;
        position: relative;
    }

    /* Badge date / heure */
    .badge-time {
        background: rgba(74, 114, 154, 0.96);
        color: #e5e7eb;
        border-radius: 999px;
        padding: 0.3rem 0.9rem;
        font-size: 0.7rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        border: 1px solid rgba(148, 163, 184, 0.7);
        box-shadow:
            0 0 12px rgba(34, 226, 226, 0.9),
            0 0 16px rgba(56, 86, 151, 0.45);
    }

    /* Grille principale du dashboard (seulement pour les cartes du haut) */
    .dashboard-grid {
        display: grid;
        grid-template-columns: minmax(260px, 320px);
        gap: 1.5rem;
        align-items: flex-start;
    }

    .meta-panel {
        position: sticky;
        top: 1.25rem;
    }

    @media (max-width: 991.98px) {
        .dashboard-grid {
            grid-template-columns: 1fr;
        }
        .meta-panel {
            position: static;
        }
    }

    /* Rapport pleine largeur */
    .report-full {
        margin-top: 0.75rem;
    }

    /* ----- Cartes / glassmorphism avec flottement ----- */
    .glass-card {
        background: linear-gradient(135deg, rgba(17, 24, 39, 0.9), rgba(15, 23, 42, 0.88));
        border: 1px solid rgba(148, 163, 184, 0.35);
        border-radius: 18px;
        box-shadow:
            0 18px 45px rgba(0, 0, 0, 0.7),
            0 0 0 1px rgba(15, 23, 42, 0.8) inset;
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        position: relative;
        overflow: hidden;
    }

    .glass-elevated::before {
        content: "";
        position: absolute;
        inset: -40%;
        background: radial-gradient(circle at 0% 0%, rgba(56,189,248,0.12), transparent 60%);
        opacity: 0.4;
        pointer-events: none;
        z-index: -1;
    }

    .glass-elevated {
        transform: translateY(0);
        transition:
            transform 0.25s ease-out,
            box-shadow 0.25s ease-out,
            border-color 0.25s ease-out;
    }

    .glass-elevated:hover {
        transform: translateY(-4px);
        box-shadow:
            0 24px 55px rgba(0,0,0,0.9),
            0 0 22px rgba(56,189,248,0.35);
        border-color: rgba(56,189,248,0.65);
    }

    .dashboard-header {
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
    }

    @media (max-width: 767.98px) {
        .dashboard-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .dashboard-header > div:last-child {
            align-items: flex-start !important;
        }
    }

    .meta-divider {
        height: 1px;
        width: 100%;
        background: linear-gradient(90deg, transparent, rgba(148, 163, 184, 0.6), transparent);
    }

    .text-info {
        color: #8efefe !important;
    }

    /* ----- Boutons néon flottants + Reset ----- */
    .neo-btn {
        position: relative;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.4rem;
        padding: 0.6rem 1.8rem;
        border-radius: 999px;
        border: 1px solid rgba(148, 163, 184, 0.85);
        background: radial-gradient(circle at top left, rgba(149, 164, 226, 0.16), rgba(17, 24, 39, 0.98));
        color: #f9fafb;
        text-transform: uppercase;
        letter-spacing: 0.14em;
        font-size: 0.68rem;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        overflow: hidden;
        box-shadow:
            0 12px 30px rgba(0, 0, 0, 0.9),
            0 0 0 1px rgba(30, 64, 175, 0.95) inset;
        transition:
            transform 0.22s ease-out,
            box-shadow 0.22s ease-out,
            border-color 0.22s ease-out,
            background 0.22s ease-out,
            color 0.22s ease-out;
        white-space: nowrap;
        animation: floatPulse 4s ease-in-out infinite;
        animation-delay: calc(var(--btn-offset, 0) * 0.15s);
    }

    .neo-btn span {
        position: relative;
        z-index: 2;
    }

    .neo-btn::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(120deg, rgba(181, 216, 248, 0.2), transparent 40%, transparent 60%, rgba(205, 229, 218, 0.2));
        transform: translateX(-135%);
        transition: transform 0.6s ease-out;
        opacity: 0.9;
    }

    .neo-btn::after {
        content: "";
        position: absolute;
        inset: -2px;
        border-radius: inherit;
        background:
            radial-gradient(circle at 0% 0%, rgba(59, 130, 246, 0.7), transparent 60%),
            radial-gradient(circle at 100% 100%, rgba(56, 189, 248, 0.6), transparent 60%);
        mix-blend-mode: screen;
        opacity: 0;
        transition: opacity 0.25s ease-out;
        z-index: 1;
    }

    .neo-btn:hover {
        transform: translateY(-3px) scale(1.03);
        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.95),
            0 0 24px rgba(56, 189, 248, 0.7);
        border-color: rgba(56, 189, 248, 0.95);
        background: radial-gradient(circle at top left, rgba(248, 250, 252, 0.14), rgba(15, 23, 42, 1));
        animation-play-state: paused;
    }

    .neo-btn:hover::before {
        transform: translateX(140%);
    }

    .neo-btn:hover::after {
        opacity: 1;
    }

    .neo-btn:active {
        transform: translateY(1px) scale(0.98);
        box-shadow:
            0 8px 18px rgba(0, 0, 0, 0.9),
            0 0 14px rgba(34, 211, 238, 0.5);
    }

    .neo-btn-primary {
        border-color: rgba(45, 212, 191, 0.95);
        box-shadow:
            0 12px 30px rgba(0, 0, 0, 0.9),
            0 0 26px rgba(34, 211, 238, 0.55);
        text-shadow: 0 0 10px rgba(34, 211, 238, 0.9);
        --btn-offset: 1;
    }

    .neo-btn-secondary {
        border-color: rgba(59, 130, 246, 0.95);
        --btn-offset: 2;
    }

    .neo-btn-danger {
        border-color: rgba(248, 113, 113, 0.95);
        box-shadow:
            0 10px 24px rgba(0,0,0,0.9),
            0 0 20px rgba(248, 113, 113, 0.55);
        background: radial-gradient(circle at top left, rgba(248, 113, 113, 0.18), rgba(15,23,42,0.98));
        --btn-offset: 3;
    }

    @keyframes floatPulse {
        0%   { transform: translateY(0); }
        50%  { transform: translateY(-3px); }
        100% { transform: translateY(0); }
    }

    /* ----- Rapport Markdown / tableau (sans coupure ...) ----- */
    .markdown-body {
        font-size: 0.85rem;
        line-height: 1.5;
    }

    .markdown-body h2,
    .markdown-body h3 {
        color: #0dcaf0;
        font-weight: 600;
        margin-top: 1.75rem;
        margin-bottom: 0.75rem;
    }

    .markdown-body table {
        width: 100% !important;
        border-collapse: separate !important;
        border-spacing: 0 !important;
        table-layout: fixed !important;
        border-radius: 12px;
        overflow: hidden;
        margin-top: 1rem;
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid rgba(148, 163, 184, 0.4);
        box-shadow: 0 12px 35px rgba(15, 23, 42, 0.95);
    }

    .markdown-body thead {
        position: sticky;
        top: 0;
        z-index: 3;
    }

    .markdown-body th {
        background: radial-gradient(circle at top left, #020617, #020817);
        color: #0dcaf0;
        padding: 0.85rem 0.9rem;
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.14em;
        border-bottom: 1px solid rgba(148, 163, 184, 0.45);
        text-align: left;
    }

    .markdown-body td {
        padding: 0.65rem 0.9rem;
        border-top: 1px solid rgba(148, 163, 184, 0.22);
        font-family: 'JetBrains Mono', 'Consolas', monospace;
        font-size: 0.78rem;
        white-space: normal;   /* plus de coupure ... */
        overflow: visible;
        text-overflow: clip;
    }

    .markdown-body tbody tr:nth-child(even) {
        background: rgba(15, 23, 42, 0.9);
    }

    .markdown-body tbody tr:nth-child(odd) {
        background: rgba(17, 24, 39, 0.88);
    }

    .markdown-body tbody tr:hover {
        background: rgba(56, 189, 248, 0.09);
    }

    .markdown-body th:nth-child(1),
    .markdown-body td:nth-child(1) {
        width: 160px;
        color: #0dcaf0;
    }

    .markdown-body th:nth-child(2),
    .markdown-body td:nth-child(2) {
        width: 220px;
        color: #f9fafb;
        border-left: 1px solid rgba(148, 163, 184, 0.25);
    }

    .markdown-body th:nth-child(3),
    .markdown-body td:nth-child(3) {
        width: 210px;
    }

    .markdown-body th:nth-child(4),
    .markdown-body td:nth-child(4) {
        width: auto;
        color: #9ca3af;
    }

    .markdown-body ul {
        padding-left: 0;
        margin-bottom: 1rem;
    }

    .markdown-body li {
        list-style: none;
        background: rgba(15, 23, 42, 0.95);
        margin-bottom: 0.5rem;
        padding: 0.75rem 0.9rem;
        border-radius: 10px;
        border-left: 3px solid #4b5563;
        font-size: 0.82rem;
        display: flex;
        align-items: center;
        gap: 0.6rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.55);
    }
</style>
{% endblock %}
